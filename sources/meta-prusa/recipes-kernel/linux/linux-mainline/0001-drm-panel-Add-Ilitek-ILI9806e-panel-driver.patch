+enum ili9806e_resolution {
+	RESCTRL_480x864 = 0,
+	RESCTRL_480x854,
+	RESCTRL_480x800,
+	RESCTRL_480x640,
+	RESCTRL_480x720,
+	RESCTRL_INVALID = 0xff,
+};
