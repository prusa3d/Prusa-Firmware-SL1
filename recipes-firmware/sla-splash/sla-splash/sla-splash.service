[Unit]
Description=Prusa SLA splash screen
DefaultDependencies=no

[Service]
ExecStart=/usr/bin/sh -c "lzcat /usr/share/splash/prusa-sla-splash.fbimg.lzma > /dev/fb0"
ExecStartPost=/usr/bin/sh -c "echo 362 > /sys/class/gpio/export && echo out > /sys/class/gpio/gpio362/direction && echo 1 > /sys/class/gpio/gpio362/value"
Type=oneshot

[Install]
WantedBy=sysinit.target
